<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  <url>
		<loc><%= @url %></loc>
		<changefreq>weekly</changefreq>
	</url>

	<!-- search pages -->
	<% @lotteries.each do |lottery| %>
		<url>
			<loc><%= winners_url(lottery: lottery.category.short_name, round: lottery.round.to_s + 'íšŒ' ) %></loc>
			<lastmod><%= Time.new(2016, 2, 4).strftime('%Y-%m-%d') %></lastmod>
		</url>
	<% end %>

	<!-- store pages -->
	<% @stores.each do |store| %>
		<url>
			<loc><%= store_url(store) %></loc>
			<lastmod><%= store.updated_at.strftime('%Y-%m-%d') %></lastmod>
		</url>
	<% end %>

</urlset> 
