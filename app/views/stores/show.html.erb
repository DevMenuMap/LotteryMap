<div class="container">
	<div class="col-md-6 col-md-offset-3">
		<!-- store -->
		<%= @store.name %>
		<div id="naver_map"></div>
		<p>위치: <%= @store.addr %></p>
		<p>
			<%= @lottery.name(false) %> 
			<%= @rank.round_in_ko %> 
			<%= @rank.rank_in_ko %> 당첨!
		</p>
		<% if @lottery.date_exists? %>
			<p><%= @lottery.date_in_ko %></p>
		<% end %>
		<p>금액: <%= @rank.winning_in_won %></p>

		<!-- lottery -->
		<% if @lottery.is_lotto? %>
			<%= render 'lotto' %>
		<% elsif @lottery.is_pension? %>	
			<%= render 'pension' %>
		<% else %>
			<%= render 'speeto' %>
		<% end %>

		<!-- news -->
		<div id="news"></div>
	</div>
</div>

<script>
	$(document).ready(function() {
		// map
		<% if @store.have_latlng? %>
			loadNaverMap(8)
		<% else %>
			loadNaverMap()
		<% end %>

		// news
		$.ajax({
			url: '<%= news_path %>',
			data: { id: <%= @store.id %> }
		});
	});
</script>
