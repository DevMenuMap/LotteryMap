<div class="form-group">
	<%= f.label :email, "이메일(선택)" %>
	<%= f.text_field :email, class: "form-control" %>
</div>

<div class="form-group">
	<%= f.label :content, "오류 내용*" %>
	<%= f.text_area :content, { rows: 10, class: "form-control" } %>
</div>

<div class="modal-footer" style="padding: 10px 0 0;">
	<%= f.button "취소", class: "btn btn_cancel", data: { dismiss: "modal" } %>
	<%= f.button "등록", class: "btn btn_submit" %>
</div>
